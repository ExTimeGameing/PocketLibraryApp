<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registrate_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    tools:context=".SignUp">
    <!-- Вход -->
    <View
        android:id="@+id/rectangle_4"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/rectangle_2"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/ellipse_2"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Имя пользователя -->
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_1"
        android:elevation="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="244dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Почта -->
    <View
        android:id="@+id/rectangle_3"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_1"
        android:elevation="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-14dp"
        tools:layout_editor_absoluteY="344dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Пароль -->
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-14dp"
        tools:layout_editor_absoluteY="294dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Шар снизу сзади     -->
    <View
        android:id="@+id/ellipse_4"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:background="@drawable/circle2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="544dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Шар сверху сзади    -->
    <View
        android:id="@+id/ellipse_3"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:background="@drawable/circle2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-180dp"
        tools:layout_editor_absoluteY="-100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Шар снизу спереди   -->
    <View
        android:id="@+id/ellipse_1"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:background="@drawable/circle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="640dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Шар сверху спереди  -->
    <View
        android:id="@+id/ellipse_2"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:background="@drawable/circle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-73dp"
        tools:layout_editor_absoluteY="-210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- Шарик готово -->
    <View
        android:id="@+id/ellipse_5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circle3"
        android:elevation="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="288dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>